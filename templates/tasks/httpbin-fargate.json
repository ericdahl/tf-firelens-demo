[
  {
    "name": "httpbin",
    "image": "ericdahl/httpbin:e249975",
    "portMappings": [
      {
        "containerPort": 8080,
        "protocol": "tcp"
      }
    ],
    "essential": true,
    "logConfiguration": {
      "logDriver": "awsfirelens",
      "options": {
        "Name": "cloudwatch",
        "region": "us-east-1",
        "log_group_name": "/ecs/httpbin-fargate-firelens-app",
        "auto_create_group": "false",
        "log_stream_prefix": "httpbin/"
      }
    }
  },


  {
    "name": "redis",
    "image": "redis",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awsfirelens",
      "options": {
        "Name": "cloudwatch",
        "region": "us-east-1",
        "log_group_name": "/ecs/httpbin-fargate-firelens-app",
        "auto_create_group": "false",
        "log_stream_prefix": "redis/"
      }
    }
  },

  {
    "name": "firelens",
    "image": "906394416424.dkr.ecr.us-east-1.amazonaws.com/aws-for-fluent-bit:latest",
    "firelensConfiguration": {
      "type": "fluentbit"
    },
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/httpbin-fargate-firelens",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "firelens"
      }
    }
  }
]